<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Explain"
    android:orientation="vertical"
    android:background="@mipmap/background_light"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_explain_logo"
        android:layout_width="47dp"
        android:layout_height="73dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/gear_bleu" />

    <TextView
        android:id="@+id/tv_explain_presentation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/explain_explain"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <Button
        android:id="@+id/btn_explain_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:text="@string/explain_lets_go"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorPrimaryDark"
        android:background="@drawable/display_menu_guide"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"/>

</LinearLayout>